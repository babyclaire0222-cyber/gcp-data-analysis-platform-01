PUBSUB_TOPIC_FOR_SQL_IMPORT=sql-import-topic

# Flask Configuration
FLASK_SECRET_KEY=local-dev-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Redis Configuration
